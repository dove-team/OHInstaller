<AeroWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="OHInstaller.MainWindow"
        Title="OHInstaller">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="56" />
			<RowDefinition Height="*" />
			<RowDefinition Height="56" />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
			<Label>请选择安装路径：</Label>
			<TextBox x:Name="pathBox" Width="200" Height="28" IsReadOnly="True" />
			<Button Click="SelectHap_Click">...</Button>
		</StackPanel>
		<ListView Grid.Row="1">
			
		</ListView>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="2">
			<Label>驱动安装状态：</Label>
			<Label x:Name="driveTips" />
			<HyperlinkButton x:Name="installManager" Content="安装" Click="InstallManager_Click" />
			<Label>Hdc安装状态：</Label>
			<Label x:Name="statusTips" />
			<HyperlinkButton x:Name="installHdc" Content="安装" Click="InstallHdc_Click" />
		</StackPanel>
	</Grid>
</AeroWindow>